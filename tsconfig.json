{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2016",
      "es2017",
      "esnext",
      "esnext.array",
      "es2018",
      "DOM"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/index.ts",
    "src/core/*.ts",
    "src/variants/*.ts",
    "src/utils/*.ts",
    "src/gamblingjs.ts",
    "src/constants.ts",
    "src/hashesCreator.ts",
    "src/interfaces.ts",
    "src/pokerEvaluator5.ts",
    "src/pokerEvaluator6.ts",
    "src/pokerEvaluator7.ts",
    "src/pokerEvaluatorTwoSets.ts",
    "src/pokerHashes5.ts",
    "src/pokerHashes7.ts",
    "src/pokerMontecarloSym.ts",
    "src/routines.ts"
  ],
  "exclude": [
    "test",
    "dist",
    "node_modules",
    "src/pokerEvaluatorOmaha.ts"
  ]
}
