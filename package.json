{
  "name": "gamblingjs",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "poker",
    "evaluator",
    "eval",
    "casino",
    "gambling",
    "gaming"
  ],
  "main": "dist/gamblingjs.umd.js",
  "module": "dist/gamblingjs.es5.js",
  "typings": "dist/types/gamblingjs.d.ts",
  "files": [
    "dist"
  ],
  "author": "michele <mikbin80@gmail.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:js",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "build:js": "rollup -c rollup.config.js",
    "build:watch": "rollup -c rollup.config.js -w",
    "build:prod": "npm run lint && npm run test && npm run build",
    "build:analyze": "rollup -c rollup.config.js --plugin rollup-plugin-analyzer",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:strict": "tsc --noEmit --strict",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "format:check": "prettier --check src/**/*.ts test/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:debug": "node --inspect-brk node_modules/.bin/vitest run",
    "dev": "npm run build:watch",
    "prepublishOnly": "npm run build:prod",
    "docs": "typedoc --out docs --target es6 --theme minimal --mode file src",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@types/lodash.camelcase": "^4.3.9",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^3.2.4",
    "colors": "^1.4.0",
    "commitizen": "^4.3.1",
    "coveralls": "^3.1.1",
    "cross-env": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^3.6.2",
    "prompt": "^1.3.0",
    "replace-in-file": "^8.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "semantic-release": "^24.2.9",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "kombinatoricsjs": "^1.0.4"
  }
}
